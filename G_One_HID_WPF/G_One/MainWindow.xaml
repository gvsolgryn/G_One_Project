<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:G_One"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Module="clr-namespace:G_One.Module" x:Class="G_One.MainWindow"
        mc:Ignorable="d"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        Loaded="MainWindows_Load"
    
        Title="G One HID" Height="400" Width="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="MainStackPanel">
            <Button x:Name="AddButton" Cursor="Hand" IsDefault="True" Click="AddButton_Click" Content="StackPanel 에 버튼 추가 테스트"/>
            <Module:DevicePanel />
        </StackPanel>
    </ScrollViewer>

</Window>
