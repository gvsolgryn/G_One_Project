<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="G_One_Xamarin.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             Title="G.One"
             ios:Page.UseSafeArea="true">
    <ContentPage.ToolbarItems>
        
        <ToolbarItem x:Name="AddDevice"
                     Text="기기 추가"
                     Order="Secondary"
                     Priority="1"
                     Clicked="AddDevice_Clicked"/>
        <ToolbarItem x:Name="RemoveDevice"
                     Text="기기 삭제"
                     Order="Secondary"
                     Priority="1"
                     Clicked="RemoveDevice_Clicked"/>

    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <RefreshView x:Name="Refresh"
                 Refreshing="Refresh_Refreshing">
    
            <ScrollView>
                
                <StackLayout>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Frame Grid.Row="0" Grid.Column="0"
                               Grid.ColumnSpan="2" Grid.RowSpan="2"
                               BorderColor="{AppThemeBinding Light=Black, Dark=White}"
                               CornerRadius="10"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#1a1a1c}"
                               Margin="10"/>
                        
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="현재 온도"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               Margin="10" Padding="10"
                               VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                               VerticalOptions="Center" HorizontalOptions="Center"/>
                        
                        <Label Grid.Row="0" Grid.Column="1"
                               Text="{Binding Temp}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               Margin="10" Padding="10"
                               VerticalTextAlignment="Center" HorizontalTextAlignment="Center"
                               VerticalOptions="Center" HorizontalOptions="Center"/>
                        
                        <Button Grid.Row="1" Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Text="테스트"
                                Margin="10"
                                VerticalOptions="Center" HorizontalOptions="Center"
                                Clicked="Button_OnClicked"/>
                    </Grid>
                    
                    <StackLayout x:Name="MainStackLayout"/>
                </StackLayout>
                
            </ScrollView>

        </RefreshView>

    </ContentPage.Content>
    
    

</ContentPage>

